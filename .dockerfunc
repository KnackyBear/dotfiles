		--name=npm \
		-v $(pwd):/project \
		-w /project \
		--entrypoint npm \
		node:lts $*
}

node() {
	docker run --rm \
		--name=node \
		-v $(pwd):/project \
		-w /project \
		--entrypoint node \
		node:lts $*
}

